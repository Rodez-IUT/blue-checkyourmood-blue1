<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CYMDroid" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- theme de titre de page. -->
    <style name="titrePage">
        <item name="android:textColor">@color/rougeClair</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/padding_haut</item>
        <item name="android:paddingBottom">@dimen/padding_bas</item>
        <item name="android:paddingLeft">@dimen/marge_gauche</item>
        <item name="android:paddingRight">@dimen/marge_droite</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="texte">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingRight">@dimen/marge_droite</item>

    </style>
    <style name="bouton">
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/btnCouleur</item>
        <item name="android:radius">2px</item>
    </style>

</resources>